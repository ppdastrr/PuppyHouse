<Window x:Class="KP_4_PuppyHouse1.Win.EmailInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Введите email" Height="170" Width="320"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите ваш email:" Margin="10"/>
        <TextBox x:Name="EmailTextBox" Grid.Row="1" Margin="10" Style="{StaticResource textBoxInput}"/>
        <Button Content="Отправить" Grid.Row="2" Margin="10" Click="SendButton_Click" Style="{StaticResource dialogButton1}"/>
    </Grid>
</Window>