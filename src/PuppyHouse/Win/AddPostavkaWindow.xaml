<Window x:Class="KP_4_PuppyHouse1.Win.AddPostavkaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Product" Height="280" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Добавление поставки" FontSize="24" FontWeight="Bold" Margin="10"/>

        <!-- Выбор товара -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Товар:" Width="100" VerticalAlignment="Center"/>
            <ComboBox x:Name="TovarCB" Width="240"  DisplayMemberPath="Name" SelectedItem="{Binding SelectedProduct}" Style="{StaticResource ComboBoxFlatStyle}" Height="38"/>
        </StackPanel>

        <!-- Ввод количества -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Количество:" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="CountTxt" Width="240" Style="{StaticResource textBoxInput}"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <Button x:Name="AddBtn" Content="Добавить" Width="125" Height="30" Command="{Binding AddProductCommand}" Style="{StaticResource dialogButton1}" Click="AddBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>

