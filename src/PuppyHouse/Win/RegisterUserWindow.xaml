<Window x:Class="KP_4_PuppyHouse1.Win.RegisterUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Регистрация пользователя" Height="700" Width="450"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    <Window.Resources>
        <!-- Стиль для TextBox -->
        <Style TargetType="TextBox" x:Key="textBoxInput">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="0 4 0 10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#ebdfe1 "/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="30"/>
        </Style>

        <!-- Стиль для ComboBox -->
        <Style TargetType="ComboBox" x:Key="comboBoxInput">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border" CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid>
                                    <ToggleButton Name="ToggleButton" IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                  Background="#ebdfe1" BorderThickness="0">
                                        <Path Data="M 0 0 L 4 4 L 8 0 Z" Fill="#888888" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    </ToggleButton>
                                    <ContentPresenter Name="ContentSite" IsHitTestVisible="False" Content="{TemplateBinding SelectionBoxItem}"
                                                      Margin="10,3,25,3" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                </Grid>
                            </Border>
                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True">
                                <Border x:Name="DropDownBorder" Background="#FFFFFF" BorderBrush="#888888" BorderThickness="1" CornerRadius="10">
                                    <ScrollViewer Margin="4,6,4,6">
                                        <StackPanel IsItemsHost="True"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="0 4 0 10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="40"/>
        </Style>

        <!-- Стиль для кнопки -->
        <Style TargetType="Button" x:Key="addButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#b7cede "/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="30"/>
        </Style>
    </Window.Resources>

    <Border Background="#EBEAF5">
        <Grid Background="#FFFAFCFB">
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock x:Name="EditAddLbl" Grid.Row="0" FontSize="25" FontWeight="SemiBold" Margin="30 35 0 0" Text="Регистрация пользователя"/>

            <TabControl Grid.Row="1" Margin="10,10,10,10">
                <TabItem Header="Основная информация">
                    <StackPanel Margin="30,0,30,0">
                        <TextBlock Text="Код пользователя" FontWeight="Medium" Margin="0,0,0,1" FontSize="14" Visibility="Collapsed"/>
                        <TextBox Text="{Binding UserCode}" Style="{StaticResource textBoxInput}" TextBlock.FontSize="14" Visibility="Collapsed"/>

                        <TextBlock Text="ФИО" FontWeight="Medium" Margin="0,0,0,1" FontSize="14"/>
                        <TextBox x:Name="FullNameTextBox" Text="{Binding FullName}" Style="{StaticResource textBoxInput}" TextBlock.FontSize="14"/>
                        <TextBox x:Name="IDTxt" Text="{Binding FullName}" Style="{StaticResource textBoxInput}" TextBlock.FontSize="14" Visibility="Collapsed"/>

                        <TextBlock Text="Телефон" FontWeight="Medium" Margin="0,0,0,1" FontSize="14"/>
                        <TextBox x:Name="PhoneTextBox" Text="{Binding Phone}" Style="{StaticResource textBoxInput}" TextBlock.FontSize="14"/>

                        <TextBlock Text="Почта" FontWeight="Medium" Margin="0,0,0,1" FontSize="14"/>
                        <TextBox x:Name="EmailTextBox" Text="{Binding Email}" Style="{StaticResource textBoxInput}" TextBlock.FontSize="14"/>

                        <TextBlock x:Name="RoleLbl" Text="Роли" FontWeight="Medium" Margin="0,0,0,1" FontSize="14"/>
                        <ComboBox x:Name="RoleComboBox" DisplayMemberPath="Name" Style="{StaticResource comboBoxInput}" TextBlock.FontSize="14" ScrollViewer.VerticalScrollBarVisibility="Hidden"/>
                        <TextBlock x:Name="StatusLbl" Text="Допуск" FontWeight="Medium" Margin="0,0,0,1" FontSize="14"/>
                        <ComboBox x:Name="StatysEmpComboBox" DisplayMemberPath="Name" Style="{StaticResource comboBoxInput}" TextBlock.FontSize="14"/>
                        <TextBlock x:Name="LoginLbl" Text="Логин" FontWeight="Medium" Margin="0,0,0,1" FontSize="14"/>
                        <TextBox x:Name="LoginTextBox" Text="{Binding Login}" Style="{StaticResource textBoxInput}" TextBlock.FontSize="14"/>

                        <TextBlock x:Name="PasswordLbl" Text="Пароль" FontWeight="Medium" Margin="0,0,0,1" FontSize="14"/>
                        <TextBox x:Name="PasswordTextBox" Text="{Binding Password}" Style="{StaticResource textBoxInput}" TextBlock.FontSize="14"/>
                        <Button x:Name="RegisterEmploye_Btn" Style="{StaticResource addButton}"  Content="Зарегистрировать" FontSize="16" FontWeight="Bold" Height="40" Click="RegisterEmploye_Btn_Click" Margin="0,20,0,0" Background="#FFAEC289" Width="200"/>
                    </StackPanel>
                </TabItem>
                <TabItem x:Name="AddPetTab" Header="Добавление животного">
                    <StackPanel Margin="30,0,30,0">
                        <TextBlock Text="Кличка" FontWeight="Medium" Margin="0,0,0,1" FontSize="14"/>
                        <TextBox x:Name="PetNameTextBox" Text="{Binding PetName}" Style="{StaticResource textBoxInput}" TextBlock.FontSize="14"/>

                        <TextBlock Text="Порода" FontWeight="Medium" Margin="0,0,0,1" FontSize="14"/>
                        <TextBox x:Name="PetAgeTextBox" Text="{Binding Poroda}" Style="{StaticResource textBoxInput}" TextBlock.FontSize="14"/>

                        <TextBlock Text="Возраст" FontWeight="Medium" Margin="0,0,0,1" FontSize="14"/>
                        <TextBox x:Name="PetPorodaTextBox" Text="{Binding PetAge}" Style="{StaticResource textBoxInput}" TextBlock.FontSize="14"/>
                        <Button x:Name="RegisterClient_Btn" Style="{StaticResource addButton}" Command="{Binding RegisterUserCommand}" Content="Зарегистрировать" FontSize="16" FontWeight="Bold" Height="40" Click="RegisterClient_Btn_Click" Margin="0,20,0,0" Background="#FFAEC289" Width="191"/>
                    </StackPanel>
                </TabItem>
            </TabControl>


        </Grid>
    </Border>
</Window>

