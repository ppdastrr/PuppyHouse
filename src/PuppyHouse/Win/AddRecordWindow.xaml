<Window x:Class="KP_4_PuppyHouse1.Win.AddRecordWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Добавление записи" Height="390" Width="450"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    <Window.Resources>
        <Style TargetType="TextBox" x:Key="textBoxInput">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer Margin="0" x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="0 4 0 10"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="#ebdfe1 "/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Border 
        x:Name="Border"
        Background="{TemplateBinding Background}" 
        BorderBrush="{TemplateBinding BorderBrush}" 
        BorderThickness="1"
        CornerRadius="10">
                <Grid>
                    <Path 
                x:Name="Arrow" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Data="M 0 0 L 4 4 L 8 0 Z" 
                Fill="Black" 
                Margin="0,0,8,0" />
                </Grid>
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter TargetName="Border" Property="Background" Value="#D8E6FA" />
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter TargetName="Border" Property="Background" Value="#B6D3F5" />
                </Trigger>
                <Trigger Property="IsChecked" Value="True">
                    <Setter TargetName="Arrow" Property="Fill" Value="#555555" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>


        <Style TargetType="Button" x:Key="addButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Background" Value="#aec289 "/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="160"/>
            <Setter Property="Height" Value="30"/>
        </Style>
    </Window.Resources>

    <Border Background="#EBEAF5">
        <Grid Background="#FFFAFCFB">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" FontSize="25" FontWeight="SemiBold" Margin="30 35 0 0"
                        HorizontalAlignment="Left" Foreground="#121518" Text="Добавление записи"/>

            <!--Separator-->
            <Separator Grid.Row="1"  Height="8" Background="#d0e1e8" Margin="0 10 0 10" />

            <StackPanel Grid.Row="2" Orientation="Vertical" Margin="30,0,30,0">
                <TextBlock FontWeight="Medium" Foreground="#696969" Margin="0,0,0,1" Text="Код" FontSize="14" Visibility="Collapsed"/>
                <TextBox Text="{Binding Code}" Style="{StaticResource textBoxInput}" Height="30" TextBlock.FontSize="14" Visibility="Collapsed" />

                <TextBlock Text="Мастер" FontWeight="Medium" Foreground="#696969" Margin="0,0,0,1" FontSize="14"/>
                <ComboBox x:Name="MasterComboBox" ItemsSource="{Binding Masters}" DisplayMemberPath="FIO" SelectedItem="{Binding SelectedMaster}" Style="{StaticResource ComboBoxFlatStyle}"  Height="30" TextBlock.FontSize="14" />
                <TextBlock Text="Дата" FontWeight="Medium" Foreground="#696969" FontSize="14" Margin="0,10,0,0"/>
                <DatePicker SelectedDate="{Binding Date}"  Height="30" TextBlock.FontSize="14" x:Name="DatePicker"  />
                <TextBlock Text="Время" FontWeight="Medium" Foreground="#696969" FontSize="14" Margin="0,13,0,0"/>
                <ComboBox x:Name="TimeComboBox" ItemsSource="{Binding AvailableTimes}" SelectedItem="{Binding SelectedTime}" Style="{StaticResource ComboBoxFlatStyle}"  Height="30" TextBlock.FontSize="14" />
            </StackPanel>

            <Separator Grid.Row="3" Height="8" Background="#d0e1e8" Margin="0 10 0 10" />



            <Button x:Name="AddSchedule_Btn" Style="{StaticResource addButton}" Margin="138,10,138,-46" Command="{Binding AddRecordCommand}" Width="NaN" Height="36" FontWeight="Bold" Click="AddSchedule_Btn_Click" Grid.Row="7">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Добавить запись"/>
                </StackPanel>
            </Button>

        </Grid>
    </Border>
</Window>


