<Window x:Class="KP_4_PuppyHouse1.Win.MainWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:prism="http://prismlibrary.com/" 
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" 
        MaxHeight="{x:Static SystemParameters.MaximizedPrimaryScreenHeight}" MaxWidth="{x:Static SystemParameters.MaximizedPrimaryScreenWidth}" WindowStartupLocation="CenterScreen" WindowStyle="None"  
        Height="933" Width="1433"
    AllowsTransparency="True" Background="{x:Null}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <Style x:Key="textBoxSearch" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border 
                        Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="{TemplateBinding BorderThickness}" 
                        CornerRadius="10" 
                        SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="menuButton" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <StackPanel Orientation="Horizontal">
                                <ContentPresenter VerticalAlignment="Center" />
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Margin" Value="10,5,0,5"/>
        </Style>
    </Window.Resources>

    <Border Background="#eff2f7" CornerRadius="30" >
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--Left Menu-->
            <Grid Grid.Column="0" x:Name="GridMenu" Margin="0,62,0,0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Popup x:Name="pop_setting" PopupAnimation="Fade" PlacementTarget="{Binding ElementName=Setting_Btn}"
                   Placement="Bottom" AllowsTransparency="True" StaysOpen="True" HorizontalOffset="-7" VerticalOffset="4">
                    <Border Background="Black" CornerRadius="5" BorderBrush="Black" BorderThickness="1" RenderOptions.BitmapScalingMode="HighQuality" UseLayoutRounding="True">
                        <ItemsControl>
                            <Label TextOptions.TextRenderingMode="Aliased" Content="Settings" FontSize="12" Background="Black" Foreground="#FFFFFF" FontFamily="Anton"/>
                        </ItemsControl>
                    </Border>
                </Popup>

                <Border Grid.Row="1" Background="#FFF4DBDB" CornerRadius="0 50 0 30">
                    <DockPanel LastChildFill="False">
                        <Border Width="80" Height="80" Background="White" CornerRadius="100"
                                DockPanel.Dock="Top" HorizontalAlignment="Left" Margin="20 -30 0 0">
                            <Image Height="70" Width="70" x:Name="User_Img">
                                <Image.Source>
                                    <BitmapImage UriSource="/res/icon.png"/>
                                </Image.Source>
                                <Image.Clip>
                                    <EllipseGeometry Center="35, 35" RadiusX="35" RadiusY="35"/>
                                </Image.Clip>
                            </Image>
                        </Border>

                        <!--Menu Titles-->
                        <TextBlock  Text="{Binding UserName}" x:Name="FIOTxt1"  Foreground="Black" FontSize="22"
                                   DockPanel.Dock="Top" TextAlignment="Center" Margin="5 25 0 10"/>

                        <TextBlock Text="{Binding UserRole}" x:Name="RoleTxt"  Foreground="Black" FontSize="14" FontWeight="SemiBold" 
                                   DockPanel.Dock="Top" TextAlignment="Center"/>

                        <!--Menu Seperator-->
                        <Separator Margin="25" DockPanel.Dock="Top" Height="0.8" Background="#FFE2A5A5"/>

                        <!-- Левое меню -->
                        <StackPanel Grid.Column="0" Background="#FFF4DBDB" Margin="0,20,0,20" Width="183">
                            <Button x:Name="СотрудникиК" Click="ShowEmployeesView" Width="162" Margin="20,0,0,20" FontSize="22" Background="{x:Null}" Content="👥 Сотрудники" BorderBrush="{x:Null}" Foreground="#FF525252"/>
                            <Button x:Name="КлиентыК"  Click="ShowClientsView" Margin="20,0,0,20" FontSize="22" Background="{x:Null}" Content="🐶 Клиенты" BorderBrush="{x:Null}" Width="129" HorizontalAlignment="Left" Foreground="#FF525252"/>
                            <Button x:Name="ТоварыК" Click="ShowProductsView" Margin="20,0,0,20" FontSize="22" Background="{x:Null}" Content="🛍 Товары" HorizontalAlignment="Left" BorderBrush="{x:Null}" Foreground="#FF525252"/>
                            <Button x:Name="УслугиК"  Click="ShowServicesView" Margin="20,0,0,20" FontSize="22" Background="{x:Null}" Content="✂ Услуги" HorizontalAlignment="Left" BorderBrush="{x:Null}" Foreground="#FF525252"/>
                            <Button x:Name="ПоставкаК"  Click="ShowReportsView" Margin="20,0,0,20" FontSize="22" Background="{x:Null}" Content="🚚 Поставка" BorderBrush="{x:Null}" HorizontalAlignment="Left" Foreground="#FF525252"/>
                            <Button x:Name="ПродажаК"  Click="ShowProdazhaView" Margin="20,0,0,20" FontSize="22" Background="{x:Null}" Content="💸 Продажа" BorderBrush="{x:Null}" HorizontalAlignment="Left" Foreground="#FF525252"/>
                            <Button x:Name="РасписаниеК"  Click="ShowSheduleView" Margin="20,0,0,20" FontSize="22" Background="{x:Null}" Content="📌 Расписание" HorizontalAlignment="Left" BorderBrush="{x:Null}" Foreground="#FF525252"/>
                            <Button x:Name="ОтчетыК"  Click="ShowOtchetView" Margin="20,0,0,10" FontSize="22" Background="{x:Null}" Content="📊 Отчеты" BorderBrush="{x:Null}" HorizontalAlignment="Left" Foreground="#FF525252"/>
                        </StackPanel>

                       

                    </DockPanel>
                </Border>

            </Grid>

            <!--Main Section-->
            <Grid Grid.Column="1" Margin="30 20 20 20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--Search Textbox-->

                <!--Page-->
                <ContentControl x:Name="ContentRegion" Grid.Row="1" />
                <Label Content="PuppyHouse" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Foreground="#FFD27F7F"/>
            </Grid>

        </Grid>
    </Border>
</Window>