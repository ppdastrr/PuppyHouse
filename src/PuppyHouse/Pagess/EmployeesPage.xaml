<UserControl x:Class="KP_4_PuppyHouse1.Pagess.EmployeesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KP_4_PuppyHouse1.Pagess"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <!-- Заголовок -->
            <RowDefinition Height="auto"/>
            <!-- Панель управления -->
            <RowDefinition Height="auto"/>
            <!-- Фильтры и поиск -->
            <RowDefinition Height="*"/>
            <!-- Таблица с данными -->
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Сотрудники" FontSize="32" FontWeight="SemiBold" Margin="0 20 0 0"
                   HorizontalAlignment="Left" Foreground="#121518"/>

        <!-- Панель управления -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Width="187">
            <Button x:Name="AddEmployy_Btn" Margin="10 10 0 0" Width="80" Style="{StaticResource addButton}" Command="{Binding AddEmployeeCommand}" Click="AddEmployy_Btn_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="➕" FontSize="16"/>
                </StackPanel>
            </Button>

            <Button x:Name="EditEmploye_Btn" Margin="10 10 0 0" Style="{StaticResource addButton3}" Command="{Binding DeleteSelectedCommand}" Width="80" Height="35" Click="EditEmploye_Btn_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="🖉" FontSize="20"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Фильтры и поиск -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 15 0 0" HorizontalAlignment="Stretch">
            <!-- Поле для поиска -->
            <TextBox x:Name="SearchBox" TextChanged="SearchBox_TextChanged" Width="200" Margin="10 0 10 0" VerticalAlignment="Center"
                     Style="{StaticResource textBoxSearch}" 
                     Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                     />

            <!-- Фильтрация по должности -->
            <ComboBox x:Name="PositionFilter" SelectionChanged="PositionFilter_SelectionChanged" Width="170" Margin="10 0 10 0" VerticalAlignment="Center"
                      ItemsSource="{Binding Positions}" 
                      SelectedItem="{Binding SelectedPosition, UpdateSourceTrigger=PropertyChanged}" 
                      Style="{StaticResource ComboBoxFlatStyle}" Height="37"/>

            <!-- Фильтрация по статусу -->
            <ComboBox x:Name="StatusFilter" SelectionChanged="StatusFilter_SelectionChanged"  Margin="10 0 10 0" VerticalAlignment="Center"
                      ItemsSource="{Binding Statuses}" 
                      SelectedItem="{Binding SelectedStatus, UpdateSourceTrigger=PropertyChanged}" 
                      Style="{StaticResource ComboBoxFlatStyle}"  Height="37"  Width="170"/>
        </StackPanel>

        <!-- Таблица с данными -->
        <DataGrid x:Name="dataGrid" Style="{DynamicResource DataGridStyle}" 
                  CellStyle="{DynamicResource DataGridCellStyle}" 
                  RowStyle="{DynamicResource DataGridRowStyle}" 
                  ColumnHeaderStyle="{StaticResource TransparentHeaderStyle}"
                  Grid.Row="3" ItemsSource="{Binding FilteredEmployees}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО" IsReadOnly="True" Width="*" Binding="{Binding FIO}"/>
                <DataGridTextColumn Header="Телефон" IsReadOnly="True" Width="*" Binding="{Binding Phone}"/>
                <DataGridTextColumn Header="Почта" IsReadOnly="True" Width="*" Binding="{Binding Email}"/>
                <DataGridTextColumn Header="Должность" IsReadOnly="True" Width="*" Binding="{Binding Role.Name}"/>
                <DataGridTextColumn Header="Статус" IsReadOnly="True" Width="*" Binding="{Binding StatusEmployee.Name}"/>


            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Должности:" HorizontalAlignment="Left" Margin="237,33,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <Label Content="Статус:" HorizontalAlignment="Left" Margin="428,33,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.RowSpan="2"/>
        <Label Content="Поиск:" HorizontalAlignment="Left" Margin="20,33,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.RowSpan="2"/>
    </Grid>
</UserControl>


